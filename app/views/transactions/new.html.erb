<h1><%= @booking.date %></h1>

<% if @error %>
<%= @error %>
<% end %>


<p>Price: <%= formatted_price(@booking.price) %></p>
<%= form_tag buy_path(permalink: @booking.permalink) do %>
  <script src="https://checkout.stripe.com/v2/checkout.js"
    class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="<%= @booking.name %>"
    data-amount="<%= @booking.price %>"></script>
<% end %>
